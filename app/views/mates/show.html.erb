<div class="p-5 mb-4 bg-body-tertiary rounded-3">
      <div class="container-fluid py-3">
        <h1 class="display-5 fw-bold mb-2"><%= @mate.first_name %> <%= @mate.last_name %></h1>
        <p class="col-md-8 fs-4 mb-4">
          <%= @mate.email %> | <%= @mate.phone %> | <%= @mate.twitter %>
        </p>
        <br />
        <br />
        <div class="d-flex gap-4">
          <% if @mate.user == current_user %>
            <%= link_to "Edit this Friend", edit_mate_path(@mate), class: "btn btn-primary" %>
            <%= button_to "Destroy this Friend", @mate, method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= link_to "Edit this Friend", edit_mate_path(@mate), class: "btn btn-primary disabled" %>
            <%= button_to "Destroy this Friend", @mate, method: :delete, class: "btn btn-danger disabled" %>
            <% end %>
          <%= link_to "Back to Friends", mates_path, class: "btn btn-primary" %>
        </div>
      </div>
</div>